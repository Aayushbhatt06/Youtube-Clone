<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/js/all.min.js"
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>
  <body class="bg-dark bg-[#0f0f0f] text-white font-sans">
    <div
      class="navbar flex justify-between items-center px-4 py-2 fixed top-0 bg-[#0f0f0f] z-10 w-full"
    >
      <div class="logo-ham flex items-center gap-6">
        <i
          class="fa-solid fa-bars fa-lg hamburger text-xl p-4 rounded-full hover:bg-[#272727]"
        ></i>
        <img class="logo invert w-[6vw] h-auto" src="svg/logo.svg" alt="logo" />
      </div>

      <div
        class="search-bar flex w-2/5 border border-[#333] rounded-full overflow-hidden bg-[#0f0f0f]"
      >
        <input
          class="flex-1 px-4 py-2 bg-transparent text-white placeholder-gray-400 text-base outline-none"
          type="text"
          placeholder="Search"
        />
        <button
          class="bg-[#1c1c1c] px-5 text-white flex cursor-pointer items-center justify-center"
        >
          <i class="fa fa-search"></i>
        </button>
      </div>

      <div class="account flex items-center gap-8 mr-8">
        <div
          class="pl-create flex items-center gap-2 px-4 py-1 bg-[#1c1c1c] rounded-full hover:bg-[#272727]"
        >
          <p class="plus text-xl font-bold">+</p>
          <button class="create text-white font-bold capitalize">create</button>
        </div>
        <i
          class="fa-solid fa-bell text-xl p-2 rounded-full hover:bg-[#272727]"
        ></i>
        <a href="/"
          ><img
            src="svg/image.png"
            class="w-8 h-8 rounded-full object-cover"
            alt="profile"
        /></a>
      </div>
    </div>

    <!-- Content -->
    <div class="content flex h-[92vh]">
      <!-- Sidebar Left -->
      <div
        class="left w-[240px] bg-[#0f0f0f] p-3 text-white font-sans fixed top-15"
      >
        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer bg-[#262626] hover:bg-[#272727]"
        >
          <a href="/"
            ><img class="invert w-6 h-6 mr-6" src="svg/home.svg" alt="home"
          /></a>
          <p class="text-sm">Home</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img class="invert w-6 h-6 mr-6" src="svg/shorts.svg" alt="shorts"
          /></a>
          <p class="text-sm">Shorts</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img
              class="invert w-6 h-6 mr-6"
              src="svg/subscriptions.svg"
              alt="subscriptions"
          /></a>
          <p class="text-sm">Subscriptions</p>
        </div>

        <hr class="my-1 border-[#616060] opacity-30" />

        <div
          class="you flex items-center gap-2 px-4 py-3 rounded-lg bg-[#272727] text-sm font-bold cursor-pointer w-[14vw]"
        >
          <p>You</p>
          <p>&gt;</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img
              class="invert w-6 h-6 mr-6"
              src="svg/history.svg"
              alt="history"
          /></a>
          <p class="text-sm">History</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img
              class="invert w-6 h-6 mr-6"
              src="svg/playlist.svg"
              alt="playlist"
          /></a>
          <p class="text-sm">Playlist</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img
              class="invert w-6 h-6 mr-6"
              src="svg/your-videos.svg"
              alt="your videos"
          /></a>
          <p class="text-sm">Your Videos</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img
              class="invert w-6 h-6 mr-6"
              src="svg/watch-later.svg"
              alt="watch later"
          /></a>
          <p class="text-sm">Watch Later</p>
        </div>

        <div
          class="left-itm flex items-center px-3 py-2 rounded-lg cursor-pointer hover:bg-[#272727]"
        >
          <a href="/"
            ><img class="invert w-6 h-6 mr-6" src="svg/like.svg" alt="liked"
          /></a>
          <p class="text-sm">Liked Videos</p>
        </div>

        <hr class="my-1 border-[#616060] opacity-30" />
      </div>

      <!-- Right Section -->
      <div class="right ml-[240px] mt-[56px]">
        <!-- Categories -->
        <div
          class="category-bar flex overflow-x-auto whitespace-nowrap bg-[#0f0f0f] px-2 py-3 no-scrollbar"
        >
          <div
            class="bg-white text-black text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer"
          >
            All
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Gaming
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Music
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Valorant
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Mixes
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Live
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Weight
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Disha Vakani
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Dumbbells
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Inventions
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Calisthenics
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            CPUs
          </div>
          <div
            class="bg-[#272727] text-white text-sm font-bold px-3 py-1.5 rounded-md mr-2 cursor-pointer hover:bg-[#3a3a3a]"
          >
            Electrical Engineering
          </div>
        </div>

        <!-- Video Content Area -->
        <div class="r-content flex flex-wrap justify-start gap-[1vw] mt-[2vh] ml-[2vw]">
          <% results.forEach(video => { %>
            <div class="item w-[390px] cursor-pointer" data-id="<%= video._id %>">
              <img class="w-full h-[210px] object-cover rounded-xl" src="<%= video.thumb %>" alt="">
              <div class="flex gap-3 mt-3">
                <img class="w-9 h-9 rounded-full" src="<%= video.ch_logo %>" alt="">
                <div>
                  <p class="text-sm font-semibold leading-snug mb-1"><%= video.title %></p>
                  <p class="text-xs text-gray-400 mb-0.5"><%= video.channel %></p>
                  <p class="text-xs text-gray-400"><%= video.views %> views • <%= video.release %> ago</p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
    
    <script>
      document.addEventListener("DOMContentLoaded", () => {
            const videoCards = document.querySelectorAll(".item");
            videoCards.forEach(item => {
              item.addEventListener("click", () => {
                const id = item.getAttribute("data-id");
                window.location.href = `/video/${id}`;
              });
            });
          });
    </script>
  </body>
</html>



